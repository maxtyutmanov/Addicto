<Window x:Class="Addicto.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Popup Name="PopupWindow"
               Placement="Mouse"
               IsOpen="{Binding Visible}"
               StaysOpen="False">

            <Border Width="100" 
                    Height="100"
                    Background="White"
                    BorderBrush="Black" BorderThickness="1" CornerRadius="3">
                <TextBlock Text="{Binding FoundText}" Margin="3"/>
            </Border>
        </Popup>
    </Grid>
</Window>
